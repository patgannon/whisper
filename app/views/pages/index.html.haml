%h1 Managing Web Pages for project #{@project.name}

= link_to 'Make a web page', new_page_path if can? :manage, @project

%ul#pages.items
  - @pages.each do |page|
    %li.item[page]
      %ul.details
        %li.field.title
          %span.field_name Title
          %span.field_value= page.title
      = link_to 'Show', page_path(page)
      = link_to 'Edit', edit_page_path(page) if can? :edit, page
      = link_to 'Destroy', page_path(page), :confirm => 'Are you sure?', :method => :delete if can? :destroy, page

%br

