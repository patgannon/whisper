%h1 Image Galleries

%table
  %tr
    %th Name
    %th
    %th
    %th

  - @galleries.each do |gallery|
    %tr
      %td= link_to gallery.name, gallery
      - if can? :manage, gallery
        %td= link_to 'Edit', edit_gallery_path(gallery)
        %td= link_to 'Destroy', gallery, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Gallery', new_gallery_path if can? :manage, @project

