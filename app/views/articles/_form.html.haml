= form_for @article do |f|
  -if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body, :id => 'html', :class => 'article'
  .field
    = f.label :published
    = f.check_box :published
  .actions
    = f.submit 'Save'
    
= content_for :head do
  = stylesheet_link_tag 'aloha'
  = stylesheet_link_tag 'ui-lightness/jquery-ui-1.8.9.custom.css'
  
  - aloha_scripts.each do |script|
    = javascript_include_tag script
  = javascript_include_tag 'aloha'
  = javascript_include_tag 'jquery-ui-1.8.9.custom.min.js'
  = javascript_include_tag 'sortable_menu'
  

